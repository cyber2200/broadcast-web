= content_for :breadcrumb do
  %li
    = link_to 'Home' , '/'
    %span.divider /
  %li
    = link_to 'Captures' , admin_captures_path
    %span.divider /
  %li
    = link_to @capture.name , admin_capture_path(id: @capture.id)
    %span.divider /
  %li.active Edit

= simple_form_for [:admin, @capture], url: admin_capture_path(id: @capture.id), method: :put do |f|
  = display_errors f

  = f.input :name, label: 'Display name'
  = f.input :host, label: 'Host ip address'
  = f.input :input1, label: 'input1'
  = f.input :input2, label: 'input2'
  = f.input :input3, label: 'input3'
  = f.input :input4, label: 'input4'

  = display_actions f, admin_capture_path(id: @capture.id)